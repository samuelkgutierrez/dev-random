# A makefile that helps generate executables and documentation from litterate
# Haskell scripts.

SHELL = /bin/bash

.PHONY: all clean
.SUFFIXES: .lhs .o .tex

LHS_SCRIPTS := $(wildcard *.lhs)
TARGETS     := $(LHS_SCRIPTS:.lhs=)
OBJS        := $(LHS_SCRIPTS:.lhs=.o)
TEX         := $(LHS_SCRIPTS:.lhs=.tex)

GHC_FLAGS := -Wall

all: $(OBJS) $(TEX)

%.o: %.lhs
	@ \
	echo "################################## building $<" && \
	ghc $(GHC_FLAGS) $<

%.tex: %.lhs
	@ \
	echo "######################### building docs for $<" && \
	lhs2TeX $< -o $@ && \
	latexmk -pdf $@

clean:
	latexmk -f -C $(TARGETS)
	rm -f *.o *.hi $(TARGETS) *.tex *.ptb
